<%include partials/header %>

<div style="margin: 0 auto ; padding: 20px ; border : 1px solid blue ; background: skyblue ;">
    <h1 style="margin: 0 auto ;">Signup here</h1>
    <form action="/signup" method="post" style="margin: 0 auto ;">

        <div style="padding: 5px ;">
            <input style="padding: 10px ; width : 60% ;" type="text" name="user[username]" placeholder="username" required >
        </div>
        <div style="padding: 5px ;">
            <input style="padding: 10px ; width : 60% ;" type="text" name="user[firstname]" placeholder="firstname" required>
        </div>
        <div style="padding: 5px ;">
            <input style="padding: 10px ; width : 60% ;" type="text" name="user[lastname]" placeholder="lastname" required>
        </div>
        <div style="padding: 5px ;">
            <input style="padding: 10px ; width : 60% ;" type="password" name="user[password]" placeholder="password" required>
        </div>
        <div style="padding: 5px ;">
            <input style="padding: 10px ; width : 60% ;" type="email" name="user[email]" placeholder="email" required>
        </div>
        <div style="padding: 5px ;">
            <input style="padding: 10px ; background : blue ; color: aliceblue ; border: none ; width : 20% ; border-radius: 20px ;" type="submit" value="sign up">
        </div>

    </form>

</div>

<%include partials/footer %>